<div class="container mx-5">
<h1>New Game</h1>
<h3><%=@letters%></h3>
<form class="form-label mt-5" action="/score" method="games#score" data-turbo="false">"What is the longest word you can find?"
<div class="d-flex">
  <input class="form-control w-75" name="word" type="text" value="<%= params[:word].to_s.upcase%>">
  <input class="btn btn-primary w-25" type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
 </div>
  <!-- ... -->
</form>
</div>
